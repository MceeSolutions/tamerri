<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
		<template id="tamerri_registration_attendee_details" name="Registration Attendee Details" inherit_id="website_event.registration_attendee_details">
   			<xpath expr="//button[@type='submit']" position="replace">
                <button type="submit" class="btn btn-primary">Continue &amp; Pay</button>
        	</xpath>
        	<xpath expr="//div[hasclass('pull-left')]" position="after">
                <div class="pull-right">
                    <h5>TAMERRI</h5>
                </div>
        	</xpath>
   		</template>
   		
		<template id="paid_thank_you" name="Thank you">
		 <t t-call="website.layout">
		     <form>
		         <div class="form-group" style="text-align: center; padding-top: 11%; padding-bottom: 10%;">
	         		 <h1 class="text-center"><i class="fa fa-check-circle fa-2x text-success" /></h1>
		             <h1>Thank you, Paid Successfully!</h1>
		             <h2>We are glad to confirm your payment to our event</h2>
		             In the meantime,
                     <h3 class="mt8 mb32">Look around on our website:</h3>
                     <a href="/" class="btn btn-primary btn-lg">Continue To Our Website</a>
		         </div>
		     </form>
		 </t>
		 </template>
		 
		 <template id="tamerri_registration_complete" name="Registration Complete" inherit_id="website_event.registration_complete">
        	<xpath expr="//div[hasclass('row')]" position="inside">
                <div class="col-md-3 mt16">
                    <h4>Payment Information</h4>
                </div>
                <div class="col-md-9 mt16">
                	<br/>
	               	<t t-foreach="attendees[:1]" t-as="attendee">
		                <tr>
		                    Please you are to pay the total sum of <td><span t-field="attendee.total"/></td> Naira Only for the total of <td><t t-esc="attendee.quantity"/></td> Tickets<br/>
		                </tr>
						<form method="POST" action="https://voguepay.com/pay/">
							<input type="hidden" name="v_merchant_id" value="2020-0073669" />
							<input type="hidden" name="memo" value="Tamerri Festival Ticket" />
							<input type="hidden" name="success_url" value="http://localhost:8069/event/payment_successful" />
							<input type="hidden" name="developer_code" value="5bd4e556636a9" />
							<input type="hidden" name="cur" value="NGN" />
							<input type="hidden" name="item_1" value="Tamerri Festival Ticket" />
							<input type="hidden" name="price_1" t-att-value="attendee.total" />
							<input type="hidden" name="description_1" value="Tamerri Festival Ticket" />
							<input type="image" src="https://voguepay.com/images/buttons/Buynow.png" class="buynowimg" style="width: 25%;" />
						</form>
	            	</t>
                </div>
        	</xpath>
   		</template>
		 
	</data>
</odoo>